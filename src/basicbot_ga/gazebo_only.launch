<launch>

<!-- ********************* Begin Gazebo Defaults ******************************** -->

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="extra_gazebo_args" default="--verbose -r -u"/>
  <arg name="physics" default="ode"/>
  <arg name="world_name" value="$(find basicbot_gazebo)/worlds/empty.world"/>
 
  <!-- set use_sim_time flag -->
  <param name="/use_sim_time" value="true" />



<!-- ********************* End Gazebo Defaults ******************************** -->    


  <!-- start gazebo server-->
  <env name="GAZEBO_MASTER_URI" value="http://localhost:11345"/>
  <node name="gazebo" pkg="gazebo_ros" type="gzserver" respawn="false" 
    output="screen" args="$(arg command_arg1) -e $(arg physics) 
    $(arg extra_gazebo_args) $(arg world_name)">
    <remap from="clock" to="clock_remapped"/>
  </node>

</launch>
